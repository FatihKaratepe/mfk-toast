{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/lib/toast/**/*.ts",
    "src/lib/toast/**/*.tsx",
    "src/lib/toast/**/*.vue"
  ],
  "exclude": [
    "src/lib/toast/**/__tests__/**",
    "src/lib/toast/**/*.test.ts",
    "src/lib/toast/**/*.spec.ts"
  ]
}
